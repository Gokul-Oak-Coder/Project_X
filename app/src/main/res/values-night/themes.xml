<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjectX" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_dark</item>
        <item name="colorPrimaryVariant">@color/grey_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_dark</item>
        <item name="colorSecondaryVariant">@color/grey_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ProjectX" parent="Base.Theme.ProjectX" />

    <style name="ScreenBackground"><item name="android:background">@color/black</item></style>
    <style name="TextColor"><item name="android:color">@color/my_gray</item></style>
    <style name="ImageTint"><item name="android:tint">@color/my_gray</item></style>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>