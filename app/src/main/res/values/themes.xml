<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjectX" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ProjectX" parent="Base.Theme.ProjectX" />


    <style name="ScreenBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="BottomNavBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextColor">
        <item name="android:color">@color/white</item>
    </style>

    <style name="ImageTint">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="ButtonTint">
        <item name="android:textColor">@color/my_gray</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <color name="alertDialogTitleTextColor">@color/black
    </color> <!-- Light theme title text color -->
    <color name="alertDialogMessageTextColor">@color/black
    </color> <!-- Light theme message text color -->
    <color name="alertDialogButtonTextColor">@color/blue
    </color> <!-- Light theme button text color -->

</resources>